# KPop Metrics Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# Google Sheets
# ============================================

# TikTok spreadsheet ID (from Google Sheets URL)
TIKTOK_SPREADSHEET_ID=your-spreadsheet-id-here

# TikTok sheet name (tab name)
TIKTOK_SHEET_NAME=Tiktok

# Row where data starts (usually 3, after headers)
TIKTOK_DATA_START_ROW=3

# Facebook spreadsheet ID (can be same as TikTok)
FB_SPREADSHEET_ID=your-spreadsheet-id-here

# Facebook sheet name (tab name)
FB_SHEET_NAME=Facebook

# Row where data starts
FB_DATA_START_ROW=3

# ============================================
# Google API Credentials
# ============================================

# Path to Google service account credentials JSON
GOOGLE_APPLICATION_CREDENTIALS=./credentials.json

# ============================================
# Runtime
# ============================================

# Directory for browser profiles and data backups
# Default: ./.runtime
RUNTIME_DIR=./.runtime

# ============================================
# URLs (usually no need to change)
# ============================================

# TIKTOK_STUDIO_URL=https://www.tiktok.com/tiktokstudio/content
# FACEBOOK_CONTENT_LIBRARY_URL=https://www.facebook.com/professional_dashboard/content/content_library
